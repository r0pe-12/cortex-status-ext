{
    "manifest_version": 3,
    "name": "CortexStats",
    "version": "2.0",
    "content_scripts": [
        {
            "matches": ["https://docs.ictcortex.me/quiz/course/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "64": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "CortexStats"
    },
    "permissions": ["storage"]
}
